<h5>Organizations</h5>

<%= link_to 'All Categories', organizations_path, class: 'btn btn-info btn-sq' %>
<% @categories.each do |cat| %>
  <%= link_to cat.pluralize, organizations_path(c: cat.pluralize.downcase), class: 'btn btn-primary btn-sq' %>
<% end %>
  
<table class="table">
  <tbody>
    <% @organizations.each do |org| %>
      <tr>
        <td><%= link_to image(org, 'thumb'), org %></td>
        <td><%= link_to org.name, org %></td>
        <td><%= link_to org.category, '#', class: 'btn btn-warning btn-sq' %></td>
        <td><%= mail_to org.email, org.email %></td>
        <td><%= phone_link org.phone %></td>
        <td><a><%= org.address %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

